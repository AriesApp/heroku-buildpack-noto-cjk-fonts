#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

function topic() {
  echo "-----> $*"
}

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2

topic "Build dir: $BUILD_DIR"

topic "Fetching noto fonts"
curl -L --silent https://github.com/AriesApp/heroku-buildpack-noto-cjk-fonts/raw/master/fonts.tar.gz  $url | tar x -z

topic "Copying fonts to app folder"
mkdir /app/.fonts
cp fonts/* /app/.fonts
